<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        style="@style/Text_Title"
        android:text="2、手机卡绑定" />

    <TextView
        style="@style/Text_Content_Big"
        android:text="通过绑定SIM卡：" />

    <TextView
        style="@style/Text_Notice"
        android:text="如果检测到SIM卡发生变化，就会发送报警短信" />

    <com.project.mobilesafe.ui.SetItemView
        android:id="@+id/siv_setup02_bind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        app:itemContent="绑定 / 解绑 SIM 卡"
        app:showStyle="only_circle" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="12dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/bind" />

        <com.project.mobilesafe.ui.PointView
            android:id="@+id/pv_point"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:count="4"
            app:position="1" />
    </RelativeLayout>
</LinearLayout>