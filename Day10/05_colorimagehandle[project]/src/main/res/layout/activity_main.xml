<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.study.colorimagehandle.MainActivity">

    <com.study.colorimagehandle.ColorHandler
        android:id="@+id/ch_cyan_red"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leftText="青"
        app:progressDrawable="@drawable/shape_cyan_red"
        app:rightText="红" />

    <com.study.colorimagehandle.ColorHandler
        android:id="@+id/ch_purple_green"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:leftText="紫"
        app:progressDrawable="@drawable/shape_purple_green"
        app:rightText="绿" />

    <com.study.colorimagehandle.ColorHandler
        android:id="@+id/ch_yellow_blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:leftText="黄"
        app:progressDrawable="@drawable/shape_yellow_blue"
        app:rightText="蓝" />

    <ImageView
        android:id="@+id/iv_object"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="12dp"
        android:src="@mipmap/img02" />
</LinearLayout>
