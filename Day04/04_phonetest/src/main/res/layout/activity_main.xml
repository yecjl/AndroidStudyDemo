<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.study.phonetest.MainActivity">

    <!--android:hint="请输入你的手机号"-->
    <EditText
        android:id="@+id/et_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="18638777587" />

    <Button
        android:id="@+id/btn_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="查询"/>

    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="13888888"
        android:textSize="20sp"
        android:textColor="#78ff0000"
        android:drawableLeft="@mipmap/phone"/>

    <TextView
        android:id="@+id/tv_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="区号："
        android:textSize="18sp"
        android:textColor="#8900ff00"/>

    <TextView
        android:id="@+id/tv_postno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="邮编："
        android:textSize="18sp"
        android:textColor="#890000ff"/>

    <TextView
        android:id="@+id/tv_ctype"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="型号："
        android:textSize="18sp"
        android:textColor="#f100f0ff"/>
    <TextView
        android:id="@+id/tv_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="地区："
        android:textSize="18sp"
        android:textColor="#f5ff8955"/>
</LinearLayout>
